                "latex": "\\operatorname{polygon}\\left(\\left(1,0\\right),\\left(4,0\\right),\\left(p_x,p_y\\right)\\right)",
                "fill": false,
                "style": "SOLID"
            },
            {
                "type": "expression",
                "id": "1020",
                "color": "#c74440",
                "latex": "\\left(1,0\\right),\\left(4,0\\right)",
                "style": "SOLID"
            },
            {
                "type": "expression",
                "id": "1019",
